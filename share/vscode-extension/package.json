{
  "name": "vscode-waltz-lang",
  "description": "Waltz Lang for Visual Studio Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.39.0"
  },
	"repository": {
		"type": "git",
		"url": "https://github.com/likebot0/waltz-lang.git",
    "directory": "share/vscode-extension"
	},
  "displayName": "Waltz Lang",
  "contributes": {
    "languages": [
      {
        "id": "waltz",
        "aliases": [
          "WALTZ",
          "waltz"
        ],
        "extensions": [
          ".wz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "waltz",
        "scopeName": "source.waltz",
        "path": "./syntaxes/.tmLanguage.json"
      }
    ]
  }
}